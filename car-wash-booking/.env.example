# Production Environment Configuration

# Database - REQUIRED for production
DATABASE_URL="postgresql://username:password@db.xxx.supabase.co:5432/postgres"

# NextAuth - REQUIRED for admin authentication
NEXTAUTH_URL="https://yourdomain.com"
NEXTAUTH_SECRET="your-64-character-secure-random-string"

# Admin User - REQUIRED for initial setup
ADMIN_EMAIL="admin@yourdomain.com"
ADMIN_PASSWORD="your-secure-admin-password"

# Email Notifications - REQUIRED for booking confirmations
SENDGRID_API_KEY="SG.xxxxx"
SENDER_EMAIL="noreply@yourdomain.com"

# SMS Notifications - REQUIRED for booking reminders
TWILIO_ACCOUNT_SID="ACxxxxx"
TWILIO_AUTH_TOKEN="xxxxx"
TWILIO_FROM="+1234567890"

# Payment Processing - OPTIONAL (for future payment integration)
STRIPE_SECRET_KEY="sk_live_xxx"
STRIPE_PUBLISHABLE_KEY="pk_live_xxx"

# Maps Integration - OPTIONAL (for location display)
NEXT_PUBLIC_GOOGLE_MAPS_API_KEY="your_google_maps_key"

# Application Configuration
NODE_ENV="production"
NEXT_PUBLIC_SITE_URL="https://yourdomain.com"