# Database Configuration
# PostgreSQL connection string with optimized pooling parameters for serverless
# Format: postgresql://username:password@host:port/database?parameter=value
#
# Recommended connection parameters for serverless:
# - connection_limit=5 (max connections per function instance)
# - pool_timeout=10 (wait max 10 seconds for a connection)
# - connect_timeout=10 (connection timeout)
# - statement_cache_size=0 (disable statement cache in serverless)
# - pgbouncer=true (enable PgBouncer mode if available)
#
# Example:
# DATABASE_URL="postgresql://user:pass@host:5432/dbname?connection_limit=5&pool_timeout=10&connect_timeout=10&statement_cache_size=0&pgbouncer=true"
DATABASE_URL=

# Stripe Configuration
STRIPE_SECRET_KEY=
STRIPE_WEBHOOK_SECRET=

# SendGrid Configuration
SENDGRID_API_KEY=
SENDER_EMAIL=

# Frontend URL for redirects
FRONTEND_URL=http://localhost:3000

# Environment
NODE_ENV=development

# Database Pool Settings (optional overrides)
DB_MAX_CONNECTIONS=10
DB_POOL_TIMEOUT=10
DB_CONNECT_TIMEOUT=10

# Monitoring Settings
ENABLE_DB_MONITORING=true
SLOW_QUERY_THRESHOLD=1000
MAX_QUERY_HISTORY=100
